<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="184dp"
        android:layout_height="270dp">

        <ImageView
            android:id="@+id/iv_business"
            android:layout_width="0dp"
            android:layout_height="175dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <View
            android:id="@+id/text_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="-7dp"
            android:background="@drawable/card_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_business" />

        <TextView
            android:id="@+id/tv_business_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/text_container"
            app:layout_constraintStart_toStartOf="@id/text_container"
            app:layout_constraintTop_toTopOf="@id/text_container"
            tools:text="Nama Toko" />

        <TextView
            android:id="@+id/tv_business_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:ellipsize="end"
            android:maxLines="5"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="@id/tv_business_name"
            app:layout_constraintStart_toStartOf="@id/tv_business_name"
            app:layout_constraintTop_toBottomOf="@id/tv_business_name"
            tools:text="Lorem Ipsum is simply dummy text of the printing and type setting industry. Lorem Ipsum has been the" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>