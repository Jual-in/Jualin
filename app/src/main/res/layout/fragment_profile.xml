<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.ProfileFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="32sp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/text_field_background"
            android:src="@drawable/product_logo" />


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/siti_nurjanah"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/email"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tv_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sitinurjanah_gmail_com"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/telp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tv_telp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/_082146585140"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/layanan"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tv_layanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/produk"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/alamat"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/las_vegas"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp" />


        <Button
            android:id="@+id/btn_edit_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingHorizontal="80dp"
            android:paddingVertical="7dp"
            android:textColor="@color/colorPrimaryDark"
            android:text="@string/edit_profile"
            android:background="@drawable/bg_white"
            android:textSize="14sp" />
        <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingHorizontal="80dp"
            android:layout_marginBottom="30dp"
            android:paddingVertical="7dp"
            android:background="@drawable/bg_border"
            android:text="@string/keluar"
            android:textSize="14sp" />


    </LinearLayout>


</ScrollView>